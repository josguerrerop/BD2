{{> navAdmin}}
<div class="container pt-4">
    <div class="row justify-content-center">
        <div class="col-md- col-sm-5">
            <div class="card">
                <div class="card-header">
                    <h2>Registrar Mueble</h2>
                </div>
                <form action="/registromuebles/add" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <input class="form-control"  type="number" name="precio" placeholder="Precio" required>
                    </div>
                    <hr>
                    <div class="form-group">
                        <label for="dimesiones">Dimensiones</label>
                        <input class="form-control"  type="number" name="alto" step="0.01" placeholder="Alto en metros" required>
                        <input class="form-control"  type="number" name="ancho" step="0.01" placeholder="Ancho en metros" required>
                        <input class="form-control"  type="number" name="profundo" step="0.01" placeholder="Profundo en metros" required>
                    </div>
                    <hr>
                    <div class="form-group">
                        <input class="form-control"  type="number" name="instalacion" placeholder="Precio de instalacion" required>
                    </div>
                    <hr>
                    <div class="form-group">
                        <p>Material: 
                        <select name="material" id="material" class="form-control" required>
                        {{#each material}}
                            <option value="{{id}}">{{material}}, {{id}}</option>
                        {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Color: 
                        <select name="color" id="color" class="form-control" required>
                        {{#each color}}
                            <option value="{{id}}">{{color}}, {{id}}</option>
                        {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Tipo: 
                        <select name="tipo" id="tipo" class="form-control" required>
                        {{#each tipo}}
                            <option value="{{id}}">{{tipo}}, {{id}}</option>
                        {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Vendedor: 
                        <select name="vendedor" id="tipo" class="form-control" required>
                        {{#each vendedor}}
                            <option value="{{id}}">{{nombre}}, {{id}}</option>
                        {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Proveedor: 
                        <select name="proveedor" id="tipo" class="form-control" required>
                        {{#each proveedor}}
                            <option value="{{id}}">{{nombre}}, {{id}}</option>
                        {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block" type="submit">Registrar</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
