{{> navAdmin}}
<div class="container ">
    <div class="row pt-2">
        <div class="col">
            <span class="float-right"><a href="/registrar-color" class="btn btn-primary float-right">Registrar
                    Color</a></span>
        </div>
    </div>
    <div class="row">
        {{#each colores }}
        <div class="col-md-4">
            <div class="panel panel-default pt-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center" style="text-transform: capitalize;">{{color}} </h2>
                    </div>
                    <div class="card-body justify-content-center">
                        <div class="panel-heading ">


                        </div>
                        <div class="panel-body">
                            <h5>Id: {{id}}</h5>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary btn-block" href="/editar-color/{{id}}"><i class="fas fa-edit"></i>&nbsp;
                            Editar</a>
                    </div>
                </div>

            </div>
        </div>

        {{/each}}
    </div>
</div>